---
interface Props {
  className?: string;
  disabled?: boolean;
  type?: astroHTML.JSX.HTMLInputTypeAttribute;
  placeholder?: string;
  required?: boolean;
}

const {
  className,
  disabled,
  type = "text",
  placeholder,
  required
} = Astro.props

const finalClass = `${className} "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"`
---

<input
  type={type}
  class={finalClass}
  disabled={disabled}
  placeholder={placeholder}
  required={required}
/>