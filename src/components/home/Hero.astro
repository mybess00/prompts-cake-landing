---
import Button from "../ui/Button.astro"
import Sparkles from "../icon/Sparkles.astro"
import ArrowDown from "../icon/ArrowDown.astro"
import Chrome from "../icon/Chrome.astro"
import HeroMockup from "./HeroMockup.astro"
---

<section class="relative min-h-screen flex items-center justify-center px-4 py-20">
  <div class="hero-gradient absolute inset-0"></div>
  <div class="container mx-auto max-w-6xl relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#2f2546]/50 backdrop-blur-sm border border-[#7d64c7]/20">
            <Sparkles class="w-4 h-4 text-[#b69df1]"/>
            <span class="text-sm text-[#7d64c7]">#PromptManagement</span>
          </div>

          <h1 class="text-5xl lg:text-7xl font-bold leading-tight">
            <span class="text-white">Prompts</span> <span class="text-[#b69df1]">Cake</span>
          </h1>

          <p class="text-xl lg:text-2xl text-[#a495c6] leading-relaxed max-w-2xl">
            Crea, guarda y reutiliza prompts para{" "}
            <span class="text-white font-semibold">ChatGPT, Gemini, Grok, DeepSeek</span> y más.
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <Button
            size="lg"
            class="bg-[#b69df1] hover:bg-[#b69df1]/90 text-[#161221] font-semibold px-8 py-4 rounded-xl"
          >
            <Chrome class="w-5 h-5 mr-2"/>
            Añadir a Chrome
          </Button>

          <Button
            variant="outline"
            size="lg"
            class="border-[#7d64c7]/30 text-[#a495c6] hover:bg-[#2f2546]/50 px-8 py-4 rounded-xl"
          >
            Ver Demo
          </Button>
        </div>

        <div class="flex items-center gap-6 pt-4">
          <div class="text-center">
            <div class="text-2xl font-bold text-white">10K+</div>
            <div class="text-sm text-[#7d64c7]">Usuarios activos</div>
          </div>
          <div class="w-px h-12 bg-[#7d64c7]/20" />
          <div class="text-center">
            <div class="text-2xl font-bold text-white">50K+</div>
            <div class="text-sm text-[#7d64c7]">Prompts guardados</div>
          </div>
          <div class="w-px h-12 bg-[#7d64c7]/20" />
          <div class="text-center">
            <div class="text-2xl font-bold text-white">4.9★</div>
            <div class="text-sm text-[#7d64c7]">Chrome Store</div>
          </div>
        </div>
      </div>

      <!-- Right Content - Mockup -->
      <HeroMockup/>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <ArrowDown class="w-6 h-6 text-ui-accent animate-bounce"/>
  </div>
</section>
