                {/* Browser header */}
                <div class="flex items-center gap-2 px-4 py-3 bg-[#2f2546]/50 border-b border-[#7d64c7]/10">
                  <div class="flex gap-2">
                    <div class="w-3 h-3 rounded-full bg-red-500/60" />
                    <div class="w-3 h-3 rounded-full bg-yellow-500/60" />
                    <div class="w-3 h-3 rounded-full bg-green-500/60" />
                  </div>
                  <div class="flex-1 text-center text-sm text-[#7d64c7]">chat.openai.com</div>
                </div>

                {/* ChatGPT interface mockup */}
                <div class="p-6 space-y-4">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-full bg-[#b69df1]/20 flex items-center justify-center">
